# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# PHP, Blade, and JavaScript files (Laravel-specific)
[*.{php,blade.php,js}]
indent_style = space
indent_size = 4

# JSON files
[*.json]
indent_style = space
indent_size = 2

# CSS, SCSS, and SASS files
[*.{css,scss,sass}]
indent_style = space
indent_size = 2

# HTML files (including Blade templates)
[*.{html,blade.php}]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML files (e.g., .yml for Laravel config)
[*.yml]
indent_style = space
indent_size = 2

# Ignore certain files (e.g., compiled files, logs)
[*.{log,lock}]
indent_style = unset
indent_size = unset
